generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WordleStat {
  id           Int    @id @default(autoincrement())
  userId       String @unique          
  gamesPlayed  Int    @default(0)
  wins         Int    @default(0)
  curStreak    Int    @default(0)
  maxStreak    Int    @default(0)
}
